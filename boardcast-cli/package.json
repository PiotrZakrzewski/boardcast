{
  "name": "boardcast-cli",
  "version": "1.0.0",
  "description": "CLI tools for creating and recording animated hex board tutorials with Boardcast",
  "type": "module",
  "bin": {
    "boardcast": "./bin/boardcast",
    "boardcast-create": "./bin/boardcast-create",
    "boardcast-record": "./bin/boardcast-record"
  },
  "main": "./lib/index.js",
  "exports": {
    ".": {
      "import": "./lib/index.js"
    }
  },
  "files": [
    "bin/",
    "lib/",
    "runtime/",
    "README.md"
  ],
  "scripts": {
    "build": "echo 'No build step required - using ES modules'",
    "test": "node lib/test.js"
  },
  "keywords": [
    "boardcast",
    "cli",
    "hex",
    "board",
    "tutorial",
    "animation",
    "recording",
    "tabletop"
  ],
  "author": "Piotr Zakrzewski",
  "license": "MIT",
  "dependencies": {
    "express": "^5.1.0",
    "playwright": "^1.54.2"
  },
  "peerDependencies": {
    "boardcast": "^1.0.0"
  },
  "peerDependenciesMeta": {
    "boardcast": {
      "optional": true
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/PiotrZakrzewski/boardcast.git",
    "directory": "boardcast-cli"
  },
  "bugs": {
    "url": "https://github.com/PiotrZakrzewski/boardcast/issues"
  },
  "homepage": "https://piotrzakrzewski.github.io/boardcast/",
  "engines": {
    "node": ">=18.0.0"
  }
}