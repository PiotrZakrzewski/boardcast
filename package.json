{
  "name": "boardcast-workspace",
  "version": "1.0.0",
  "description": "Monorepo for Boardcast packages",
  "private": true,
  "workspaces": [
    "boardcast",
    "boardcast-cli", 
    "boardcast-contrib",
    "demo"
  ],
  "scripts": {
    "build": "npm run build --workspace=boardcast && npm run build --workspace=boardcast-contrib",
    "build:all": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "typecheck": "npm run typecheck --workspaces",
    "dev": "npm run dev --workspace=demo",
    "preview": "npm run preview --workspace=demo",
    "build:demo": "npm run build --workspace=demo"
  },
  "keywords": [
    "animation",
    "hex", 
    "board",
    "tabletop",
    "game",
    "tutorial",
    "d3",
    "visualization",
    "svg",
    "hexagonal"
  ],
  "author": "Boardcast Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PiotrZakrzewski/boardcast.git"
  },
  "bugs": {
    "url": "https://github.com/PiotrZakrzewski/boardcast/issues"
  },
  "homepage": "https://piotrzakrzewski.github.io/boardcast/"
}
